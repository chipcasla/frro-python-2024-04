<CustomButton@Button>:
    background_color: (0.8, 0.8, 0.8, 1)
    font_size: 35

<EqualButton@Button>:
    background_color:(246, 101, 0, 0.8)

GridLayout:
    rows: 2
    BoxLayout:
        size_hint_y: 0.4
        height: dp(200)
        orientation: 'horizontal'
        Label:
            id: label
            text: ""
            font_size: 45

    GridLayout:
        rows: 4
        cols: 4
        padding: 5
        spacing: 5
        
        CustomButton:
            text: "7"
            on_press: label.text += self.text
        CustomButton:
            text: "8"
            on_press: label.text += self.text
        CustomButton:
            text: "9"
            on_press: label.text += self.text
        CustomButton:
            text: "/"
            on_press: label.text += self.text
        CustomButton:
            text: "4"
            on_press: label.text += self.text
        CustomButton:
            text: "5"
            on_press: label.text += self.text
        CustomButton:
            text: "6"
            on_press: label.text += self.text
        CustomButton:
            text: "*"
            on_press: label.text += self.text
        CustomButton:
            text: "1"
            on_press: label.text += self.text
        CustomButton:
            text: "2"
            on_press: label.text += self.text
        CustomButton:
            text: "3"
            on_press: label.text += self.text
        CustomButton:
            text: "-"
            on_press: label.text += self.text
        CustomButton:
            text: "Borrar"
            on_press: label.text = ""
        CustomButton:
            text: "0"
            on_press: label.text += self.text
        EqualButton:
            text: "="
            on_press: app.actualizar_label(app.calcular()) 
        CustomButton:
            text: "+" 
            on_press: label.text += self.text        
