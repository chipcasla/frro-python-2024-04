GridLayout:
  cols: 1
  Label:
    id: label
    text: ""
    font_size: '28sp'
    size_hint_y: 0.2

  GridLayout:
    cols: 4
    spacing: 5
    padding: 20

    Button:
      text: '7'
      on_press: label.text += self.text

    Button:
      text: '8'
      on_press: label.text += self.text

    Button:
      text: '9'
      on_press: label.text += self.text

    Button:
      text: '/'
      on_press: label.text += self.text

    Button:
      text: '4'
      on_press: label.text += self.text

    Button:
      text: '5'
      on_press: label.text += self.text

    Button:
      text: '6'
      on_press: label.text += self.text

    Button:
      text: '*'
      on_press: label.text += self.text

    Button:
      text: '1'
      on_press: label.text += self.text

    Button:
      text: '2'
      on_press: label.text += self.text

    Button:
      text: '3'
      on_press: label.text += self.text

    Button:
      text: '-'
      on_press: label.text += self.text

    Button:
      text: 'C'
      on_press: label.text = ''

    Button:
      text: '0'
      on_press: label.text += self.text

    Button:
      text: '='
      on_press: label.text = str(eval(label.text))

    Button:
      text: '+'
      on_press: label.text += self.text
