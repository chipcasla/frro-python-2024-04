<BackgroundColor@Widget>
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<TextInputs@TextInput>
    

ScreenManager:
    Screen:
        name: "pantalla1"
        BoxLayout:
            padding: 5
            spacing: 5
            orientation: "vertical"
            canvas:
                Color: 
                    rgb:[0,0,0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            BackgroundLabel
                size_hint_y: 0.3
                text: 'Registro'
                font_size: 45
                background_color: 1, 0.6, 0.2, 1
            BoxLayout:
                padding: 10
                spacing: 20
                orientation: "vertical"
                TextInputs:
                    id: nombre
                    hint_text: "Nombre"
                TextInputs:
                    id: apellido
                    hint_text: "Apellido"
                TextInputs:
                    id: mail
                    hint_text: "Mail"
                TextInputs:
                    id: contraseña
                    hint_text: "Contraseña"
            Button:
                size_hint_y: 0.3
                text: "Registrarse"
                background_color:(0,0.5,0)
                on_press:
                    root.transition.direction = "down"
                    root.current = "pantalla2"

    Screen:
        name: "pantalla2"
        BoxLayout:
            orientation: "horizontal"
            canvas:
                Color: 
                    rgb:[0,0,0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Registro exitoso"