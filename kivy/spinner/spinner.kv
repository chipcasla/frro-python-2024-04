ScreenManager:
    Screen:
        name: "menu"
        FloatLayout:
            padding: 5
            spacing: 5
            orientation: "vertical"
            canvas:
                Color:
                    rgb:[0,0,0]
                Rectangle:
                    pos:self.pos
                    size:self.size
            Label:
                text: "Menu Principal"
                font_size: 32
                color: 1,1,1,1
                size_hint: (None, None)
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            Spinner:
                text: "Menu"
                values: "Futbol", "Recetas","Materias","Lenguajes"
                size_hint:(None,None)
                pos_hint: { 'center_x': .5,'center_y': .5 }
                size: (150,50)

